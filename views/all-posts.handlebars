{{#each allPosts}}
<section class="post">
  <div class="post-details">
    <div class="post-header">
      <a href="/post/{{id}}">
        <h3 post-id="{{id}}">{{title}}</h3>
        <p>{{format_date createdAt}} {{format_time createdAt}}</p>
      </a>
    </div>
    <div class="post-body">
      <p>{{post_text}}</p>
      <div class="username-section">
        <p class="post-username">- {{user.username}}</p>
        <div>
          <a class="add-comment-btn" {{#if loggedIn}} href="/post/{{id}}/add-comment/" {{else}} href="/login/" {{/if}}><button>add comment</button></a>
          {{#if userIdMatch}}
          <a class="edit-post-btn" {{#if loggedIn}} href="/dashboard/update/{{id}}" {{else}} href="/login/" {{/if}}><button>edit post</button></a>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</section>
{{/each}}
<script src="../../js/all-posts.js"></script>