{{#if userIdMatch}}
<section class="update-post">
  <form id="update-post-form" post-id="{{post.id}}" user-id="{{post.user_id}}">
    <div class="form-line">
      <label for="post-title-input" class="form-category">title:</label>
      <input class="form-input" type="text" id="post-title-input" placeholder="title" value="{{post.title}}" />
    </div>
    <div class="form-line">
      <label for="post-text-input" class="form-category">content:</label>
      <input class="form-input" type="text" id="post-text-input" placeholder="content" value="{{post.post_text}}" />
    </div>
    <div class="form-btn-box">
      <button class="form-btn" id="update-submit-btn">submit</button>
    </div>
  </form>
  <div class="form-btn-box">
    <button class="form-btn" id="delete-post-btn">delete</button>
  </div>
</section>
<script src="../../js/update-post.js"></script>
{{else}}
<h4>You are not the author of this post</h4>
{{/if}}