<section class="user-posts">
  {{#each allPosts}}
  <div class="post-details">
    <h3 post-id="{{id}}"><a href="/dashboard/update/{{id}}">{{title}}</a></h3>
    <p>By: {{user.username}}</p>
    <p>{{post_text}}</p>
    <p>{{ format_date createdAt}} {{format_time createdAt}}</p>
  </div>
  {{/each}}
</section>